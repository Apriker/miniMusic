page{
  background-color:#F7F7Ff;
}

/*  顶部图片样式 */
.top{
  margin-top: 40rpx;
  margin-left: 70rpx; 
  width: 100%;
  height: 240rpx;
}
.top image{
  float: left;
  width: 220rpx;
  height: 220rpx;
}
.top text{
  float: left;
  margin-left:30rpx;
  width: 450rpx;
  font-size: 1.2rem;
  height: 60rpx;
}

.top textarea{
  float: left;
  margin-left:30rpx;
  width: 450rpx;
  height: 190rpx;
  font-size: 0.92rem;
  color: rgb(126, 126, 129);
}

/* 歌曲列表 */

.body{
  margin-left: 18rpx;
  width: 715rpx;
  background-color: white;
  border-radius: 12rpx;
}
.playAll {
  height: 140rpx;
}
.playAll image{
  margin-left: 36rpx;
  margin-top: 36rpx;
  width: 56rpx;
  height: 56rpx;
}
.playAll text{
  position: absolute;
  margin-left: 28rpx;
  margin-top: 39rpx;
  font-size: 1rem;
}

.musicStyle{
  padding-bottom: 12rpx;
  height: 136rpx;
  width: 892rpx;
  
}
.musicStyle:active{
  background-color: rgb(236, 236, 240);
}

.musicStyle .musicNumber{
  float: left;
  margin-left: 36rpx;
  margin-top: 36rpx;
  width: 52rpx;
  height: 52rpx;
}

.musicStyle .musicName{
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 58rpx;
  margin-top: 18rpx;
  width: 590rpx;
  height: 52rpx;
  font-size: 1rem;
}

.musicStyle .musicAuthor{
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 58rpx;
  margin-top: 9rpx;
  width: 590rpx;
  height: 52rpx;
  font-size: 0.9rem;
  color: rgb(148, 148, 153);
}